# ============================================================================
# ShelterLink Environment Variables
# ============================================================================
# Copy this file to .env and update values as needed

# ============================================================================
# Database (Prototype uses SQLite)
# ============================================================================
DATABASE_URL="file:./dev.db"

# TODO (Production): Use PostgreSQL
# DATABASE_URL="postgresql://user:password@localhost:5432/shelter_link"

# ============================================================================
# JWT Authentication
# ============================================================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# TODO (Production): Add refresh token settings
# JWT_REFRESH_SECRET="your-refresh-token-secret"
# JWT_REFRESH_EXPIRES_IN="30d"

# ============================================================================
# API Server
# ============================================================================
PORT=4000
HOST=0.0.0.0
NODE_ENV=development

# ============================================================================
# File Uploads (Prototype uses local filesystem)
# ============================================================================
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# TODO (Production): Use S3/MinIO
# S3_ENDPOINT="http://localhost:9000"
# S3_ACCESS_KEY="minioadmin"
# S3_SECRET_KEY="minioadmin"
# S3_BUCKET="shelter-link"
# S3_REGION="us-east-1"

