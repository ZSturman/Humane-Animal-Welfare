# Shelter Link - Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/shelter_link?schema=public"

# Shadow database for Prisma migrations (can use same host, different db)
SHADOW_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/shelter_link_shadow?schema=public"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT secret for API authentication (generate with: openssl rand -base64 64)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# JWT token expiration
JWT_EXPIRES_IN="7d"

# Refresh token expiration
REFRESH_TOKEN_EXPIRES_IN="30d"

# Session encryption key (for cookies)
SESSION_SECRET="your-session-secret-change-in-production"

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API server port
API_PORT=3001

# API base URL
API_BASE_URL="http://localhost:3001"

# Allowed CORS origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate limiting (requests per minute)
RATE_LIMIT_MAX=100

# =============================================================================
# WEB APPLICATION
# =============================================================================
# Next.js app port
WEB_PORT=3000

# Public-facing URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# AAHA Universal Microchip Lookup API (optional)
AAHA_API_KEY=""
AAHA_API_URL="https://www.petmicrochiplookup.org/api"

# Petfinder API (optional - for cross-posting)
PETFINDER_API_KEY=""
PETFINDER_API_SECRET=""

# Shelterluv API (optional - for data sync)
SHELTERLUV_API_KEY=""

# ASM3 API (optional - for data sync)
ASM3_API_URL=""
ASM3_API_KEY=""

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Email (SendGrid, Mailgun, or SMTP)
EMAIL_PROVIDER="smtp"
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@shelterlink.org"

# SMS (Twilio)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Push Notifications (Firebase Cloud Messaging)
FCM_PROJECT_ID=""
FCM_PRIVATE_KEY=""
FCM_CLIENT_EMAIL=""

# =============================================================================
# FILE STORAGE
# =============================================================================
# Storage provider: local, s3, gcs
STORAGE_PROVIDER="local"
STORAGE_LOCAL_PATH="./uploads"

# AWS S3 (if STORAGE_PROVIDER=s3)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL="info"

# Sentry DSN (optional - for error tracking)
SENTRY_DSN=""

# Analytics (optional)
ANALYTICS_ENABLED=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable ML-based risk predictions (requires additional setup)
FEATURE_ML_PREDICTIONS=false

# Enable public API access (for partner integrations)
FEATURE_PUBLIC_API=true

# Enable cross-shelter transfers
FEATURE_TRANSFERS=true

# Enable webhook notifications
FEATURE_WEBHOOKS=true

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Node environment
NODE_ENV="development"

# Enable debug mode
DEBUG=false

# Seed database on startup (development only)
SEED_ON_START=false
