{
  "name": "shelter-link",
  "version": "1.0.0",
  "description": "Unified Humane Animal Shelter Platform - Connecting shelters, rescues, and adopters to save lives",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:demo": "VITE_MOCK_MODE=true npm run dev --filter=@shelter-link/web",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "turbo run lint",
    "db:generate": "turbo run db:generate --filter=@shelter-link/database",
    "db:push": "turbo run db:push --filter=@shelter-link/database",
    "db:migrate": "turbo run db:migrate --filter=@shelter-link/database",
    "db:seed": "turbo run db:seed --filter=@shelter-link/database",
    "db:studio": "turbo run db:studio --filter=@shelter-link/database",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.0"
}
