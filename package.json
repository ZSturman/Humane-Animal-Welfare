{
  "name": "shelter-link",
  "version": "1.0.0",
  "description": "Unified Humane Animal Shelter Platform - Connecting shelters, rescues, and adopters to save lives",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "db:generate": "turbo run db:generate --filter=@shelter-link/database",
    "db:push": "turbo run db:push --filter=@shelter-link/database",
    "db:migrate": "turbo run db:migrate --filter=@shelter-link/database",
    "db:seed": "turbo run db:seed --filter=@shelter-link/database",
    "db:studio": "turbo run db:studio --filter=@shelter-link/database",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.0"
}
